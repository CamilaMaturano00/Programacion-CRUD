<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRUD Node.js</title>
  <link rel="shortcut icon" href="img/icon.png" type="image/x-icon">
  <link rel="stylesheet" href="css/style.css">
  <link rel="stylesheet" href="css/nav.css">
  <script src="https://kit.fontawesome.com/20f8330ac2.js" crossorigin="anonymous"></script>

</head>
<body id="body" onload="open_close_menu()">
  <header>
      <div class="icon__menu">
          <i class="fas fa-bars" id="btn_open"></i>
      </div>
  </header>
  <div class="menu__side" id="menu_side"> 
      
      <div class="name__page"> 
          <i class="fa-solid fa-shield-dog"></i>
          <h4>MyVet</h4>
      </div>
      <div class="options__menu">
              <a href="/index" >
                  <div class="option">
                      <i class="fas fa-home" title="Inicio"></i>
                      <h4>Inicio</h4> 
                  </div>
              </a>
              <a href="./addPaciente" >
                  <div class="option">
                      <i class="fa-solid fa-paw" title="Paciente"></i>
                      <h4>Pacientes</h4>
                  </div>
              </a>
              <a href="./Client">
                  <div class="option">
                      <i class="far fa-id-badge" title="Cliente"></i>
                      <h4>Cliente</h4>
                  </div>
              </a>
              <a href="./query" class="selected">
                  <div class="option">
                      <i class="fa-solid fa-file-lines" title="Consulta"></i>
                      <h4>Consulta</h4>
                  </div>
              </a>
              <a href="./ListLogin">
                  <div class="option">
                      <i class="fa-solid fa-stethoscope" title="Usuarios"></i>
                      <h4>Usuarios</h4> 
                  </div>
              </a>
              <a href="./product">
                <div class="option">
                    <i class="fa-brands fa-product-hunt" title="Producto"></i>
                    <h4>Productos</h4> 
                </div>
            </a>
            <a href="./Category">
              <div class="option">
                  <i class="fa-solid fa-c" title="Producto"></i>
                  <h4>Categorias</h4> 
              </div>
            </a>
                <a href="./" class="logout">
                    <div class="option">
                        <i class="fa-solid fa-right-from-bracket" title="Salir"></i>
                        <h4>Cerrar Sesi√≥n</h4> 
                    </div>
                </a>
      </div>
  </div>
  <div class="center">
    <h4>Consultas</h4>
  </div>
  <br>
  <div class="container-table" >
      <table>
        <thead>
          <th scope="col">Medico</th>
          <th scope="col">paciente</th>
          <th scope="col">Motivo de Consulta</th>
          <th scope="col">Diagnostico</th>
          <th scope="col">Creado</th>
          <th scope="col">Actualizado</th>
          <th scope="col">Opciones</th>
        </thead>
        <tbody>
          <% query.forEach(function(query) { %>
            <tr>
              <td>
                <%= query.queryname %>
              </td>
              <td>
                <%= query.patientId%>
              </td>   
              <td>
                <%= query.reason%>
              </td>
              <td>
                <%= query.diagnosis%>
              </td>
              <td>
                <%= query.created_at.toLocaleDateString() %>
                  <%= query.created_at.toLocaleTimeString() %>
              </td>
              <td>
                <%= query.updated_at.toLocaleDateString() %>
                  <%= query.updated_at.toLocaleTimeString() %>
              </td>            
              <td>
                <div class="btn-actions">
                  <div>
                    <form action="./editQuery" method="GET">
                      <input type="hidden" name="idQuery" value="<%= query.idQuery %>">
                      <button type="submit" class="edit-btn"><i class="fa-solid fa-pencil"></i></button>
                    </form>
                  </div>
                  <div>
                    <form action="./delete-query" method="POST">
                      <input type="hidden" name="idQuery" value="<%= query.idQuery %>">
                      <button type="submit" class="delete-btn"><i class="fa-solid fa-trash"></i></button>
                    </form>
                  </div> 
                </div>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
      <div class="btn">
        <a href="./addQuery" class="boton">Agregar Consulta</a>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
      crossorigin="anonymous"></script>
    <script src="js/script.js"></script>
    <script src="js/menu.js"></script>
  </body>
  
