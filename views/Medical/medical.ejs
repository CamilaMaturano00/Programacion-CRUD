<%- include("../template/navBar") %>
<body>
    <br>
    <div class="row container " width="100vw">
      <div class="text-center">
        <h2>Lista de Medical</h2>
      </div>
      <br>
      <br>
      <br>
      <table class="table table-light table-bordered table-hover"  >
        <thead>
          <th scope="col">Nombre</th>
          <th scope="col">email</th>
          <th scope="col">telefono</th>
          <th scope="col">Direccion</th>
          <th scope="col">Especialidad</th>
          <th scope="col">Fecha de naciemiento</th>
          <th scope="col">Creado</th>
          <th scope="col">Actualizado</th>
          <th scope="col">Opciones</th>
        </thead>
        <tbody>
          <% medical.forEach(function(medical) { %>
            <tr>
              <td>
                <%= medical.medicalname%>
              </td>
              <td>
                <%= medical.email%>
              </td>   
              <td>
                <%= medical.phone%>
              </td>
              <td>
                <%= medical.address%>
              </td>
              <td>
                <%= medical.speciality%>
              </td>
              <td>
                <%= medical.datebirth%>
              </td>
              <td>
                <%= medical.created_at.toLocaleDateString() %>
                  <%= medical.created_at.toLocaleTimeString() %>
              </td>
              <td>
                <%= medical.updated_at.toLocaleDateString() %>
                  <%= medical.updated_at.toLocaleTimeString() %>
              </td>            
              <td>
                <div class="row">
                  <div class="row">
                    <form action="./editMedical" method="GET">
                      <input type="hidden" name="idMedical" value="<%= medical.idMedical%>">
                      <button type="submit" class="btn edit-btn"><i class="bi bi-pencil"></i>Edi</button>
                    </form>
                  </div>
                  <div class="row"></div>
                  <div class="row">
                    <form action="./delete-medical" method="POST">
                      <input type="hidden" name="idMedical" value="<%= medical.idMedical%>">
                      <button type="submit" class="btn delete-btn"><i class="bi bi-trash"></i>Eli</button>
                    </form>
                  </div> 
                </div>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
      <br>
      <br>
      <div class="float-start">
        <a href="./addMedical" class="btn btn-success">Agregar Medico</a>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
      crossorigin="anonymous"></script>
    <script src="js/script.js"></script>
    <script src="js/menu.js"></script>
  </body>
  
  </html>