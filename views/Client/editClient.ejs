
<body>
  <br>
  <div class="container">
    <div class="text-center">
      <h2>Editar datos de Consulta</h2>
    </div>
    <br>
    <form action="./edit-client" method="POST">
      <input type="hidden" name="idClient" value="<%= client.idClient%>">
      <div class="row">
        <div class="col-12">
          <label for="clientname" class="form-label">Nombre de Cliente</label>
          <input type="text" name="clientname" id="clientname" class="form-control" value="<%= client.clientname%>">
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-6">
          <label for="dni" class="form-label">DNI </label>
          <input type="text" name="dni" id="dni" class="form-control" value="<%= client.dni%>">
        </div>
        <div class="col-6">
          <label for="email" class="form-label">email</label>
          <input type="email" name="email" id="email" class="form-control" value="<%= client.email%>">
        </div>
      </div>
      <br>
      <div class="col-6">
        <label for="phone" class="form-label">Tel√©fono</label>
        <input type="text" name="phone" id="phone" class="form-control" value="<%= client.phone %>">
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-6">
        <label for="city" class="form-label">Ciudad</label>
        <input type="text" name="city" id="city" class="form-control" value="<%= client.city %>">
      </div>
      <div class="col-6">
        <label for="state" class="form-label">Estado</label>
        <input type="text" name="state" id="state" class="form-control" value="<%= client.state%>">
      </div>
    </div>
      
        <div class="col-6">
          <div class="float-start">
            <button type="submit" class="btn btn-success">Actualizar Cliente</button>
          </div>
        </div>
        <div class="col-6">
          <div class="float-end">
            <a href="./index" class="btn btn-success" >Volver al inicio</a>
          </div>
        </div>
      </div>
    </form>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
