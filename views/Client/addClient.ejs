<%- include("../template/navBar") %>

<body>
  <br>
  <div class="form-register">
      <h2>Ingresar Cliente</h2>
      <hr>
      <br>
    <br>
    <form action="./addClient" method="POST" class="container-form">
      <div class="container-input">
        <div class="input">
          <label for="clientname" class="form-label">Nombre del cliente</label>
          <input class="controls" type="text" name="clientname" id="clientname" class="form-control">
        </div>
        <div class="input">
          <label for="dni" class="form-label">DNI</label>
          <input class="controls" type="text" name="dni" id="dni" class="form-control">
        </div>        
      </div>
      <div class="container-input">
        <div class="input">
          <label for="email" class="form-label">Email</label>
          <input class="controls" type="text" name="email" id="email" class="form-control">
        </div>
        <div class="input">
          <label for="phone" class="form-label">Telefono</label>
          <input class="controls" type="text" name="phone" id="phone" class="form-control">
        </div>
      </div>
      <div class="container-input">
        <div class="input">
          <label for="city" class="form-label">Ciudad</label>
          <input class="controls" type="text" name="city" id="city" class="form-control">
        </div> 
        <div class="input">
          <label for="state" class="form-label">Estado</label>
          <input class="controls" type="text" name="state" id="state" class="form-control">
        </div>
      </div>
      <div class="container-btn">
          <div>
            <button type="submit" class="boton">Agregar Cliente</button>
          </div>
          <div>
            <a href="./Client" class="boton">Volver</a>
          </div>
        </div>
      </div>
    </form>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
    crossorigin="anonymous"></script>
  <script src="js/script.js"></script>
  <script src="js/menu.js"></script>

</body>

</html>