<%- include("../template/navBar") %>
<body>
    <br>
    <div class="row container " width="100vw">
      <div class="text-center">
        <h2>Lista de pacientes</h2>
      </div>
      <br>
      <br>
      <br>
      <table class="table table-light table-bordered table-hover"  >
        <thead>
          <th scope="col">Nombre</th>
          <th scope="col">Fecha Nacimiento</th>
          <th scope="col">Peso</th>
          <th scope="col">Altura</th>
          <th scope="col">Especie</th>
          <th scope="col">Opciones</th>
        </thead>
        <tbody>
          <% patient.forEach(function(patient) { %>
            <tr>
              <td>
                <%= patient.patietname %>
              </td>
              <td>
                <%= patient.datebirth %>
              </td>   
              <td>
                <%= patient.weight%>
              </td>
              <td>
                <%= patient.height%>
              </td>
              <td>
                <%= patient.species%>
              </td>
              <td>
                <%= patient.created_at.toLocaleDateString() %>
                  <%= patient.created_at.toLocaleTimeString() %>
              </td>
              <td>
                <%= patient.updated_at.toLocaleDateString() %>
                  <%= patient.updated_at.toLocaleTimeString() %>
              </td>            
              <td>
                <div class="row">
                  <div class="row">
                    <form action="./editProduct" method="GET">
                      <input type="hidden" name="id" value="<%= product.id %>">
                      <button type="submit" class="btn edit-btn"><i class="bi bi-pencil"></i></button>
                    </form>
                  </div>
                  <div class="row"></div>
                  <div class="row">
                    <form action="./delete-product" method="POST">
                      <input type="hidden" name="id" value="<%= product.id %>">
                      <button type="submit" class="btn delete-btn"><i class="bi bi-trash"></i></button>
                    </form>
                  </div>
                </div>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
      <br>
      <br>
      <div class="float-start">
        <a href="./addPaciente" class="btn btn-success">Agregar Paciente</a>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
      crossorigin="anonymous"></script>
    <script src="js/script.js"></script>
    <script src="js/menu.js"></script>
  </body>
  
  </html>